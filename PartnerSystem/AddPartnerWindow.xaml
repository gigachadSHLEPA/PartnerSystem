<Window x:Class="PartnerSystem.AddPartnerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:PartnerSystem.Models"
        Title="Добавить партнера" Height="400" Width="600">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Наименование:" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="1"/>

        <TextBlock Text="Тип партнера:" Grid.Row="2"/>
        <ComboBox x:Name="TypeComboBox" 
                
                  SelectedIndex="0" Grid.Row="3"/>

        <TextBlock Text="Рейтинг:" Grid.Row="4"/>
        <TextBox x:Name="RatingTextBox" Grid.Row="5"/>

        <TextBlock Text="Адрес:" Grid.Row="6"/>
        <TextBox x:Name="AddressTextBox" Grid.Row="7"/>

        <TextBlock Text="ФИО директора:" Grid.Row="8"/>
        <TextBox x:Name="DirectorTextBox" Grid.Row="9"/>

        <TextBlock Text="Телефон:" Grid.Row="10"/>
        <TextBox x:Name="PhoneTextBox" Grid.Row="11"/>

        <TextBlock Text="Email:" Grid.Row="12"/>
        <TextBox x:Name="EmailTextBox" Grid.Row="13"/>

        <Button Content="Сохранить" Click="SaveButton_Click" 
                HorizontalAlignment="Center" Grid.Row="14"/>
    </Grid>
</Window>